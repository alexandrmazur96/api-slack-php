{
    "name": "olexandrmazur/api-slack-php",
    "description": "Easy in use, lightweight library for interaction with Slack API.",
    "keywords": ["slack", "php slack", "slack api"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Connor Parks",
            "email": "connor@connorvg.tv"
        },
        {
            "name": "Olexandr Mazur",
            "email": "alexandrmazur96@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Frlnc\\Slack\\": "src/"
        }
    },
    "suggest": {
        "ext-curl": "CurlInteractor class require cURL extension",
        "ext-json": "SlackResponse class require JSON extension"
    },
    "minimum-stability": "dev"
}
